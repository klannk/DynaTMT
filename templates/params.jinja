
{% extends "base.jinja" %}

{% block content %}

  <ul>
    
      <span>
        <div class="col-md-5 mb-3">
          <label for="input">Choose a input type:</label>
          <select name="input" id="input">
            <option value="PD">PD</option>
            <option value="MQ">Plain text</option>
          </select>
        </div>
      </span>
    
    
      <input type="file" id='input_file' name='input_file'>
    
    
      <div class="col-md-5 mb-3">
        <label for='Normalisation'>Please choose your normalization method:</label>
        <select name="Normalisation" id="norm">
          <option value="TI">Total intensity</option>
          <option value="MD">Median</option>
          <option value="TMM">TMM</option>
        </select>
      </div>
      <div class="col-md-5 mb-3">
        <label for='it_adj'>Do you want to perform Injection Time adjustment?</label>
        <select name="it_adj" id="it_adj">
          <option value="Yes">Yes</option>
          <option value="No">No</option>
        </select>
      </div>
    
    
    
  </ul>

  <button class="btn btn-primary btn-lg btn-block" id='go-button'>GO</button>
  <a href="/api/results"><button class="btn btn-primary btn-lg btn-block" id='result',>Show Result</button></a>
{% endblock %}